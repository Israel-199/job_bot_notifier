datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Feed {
  id        Int      @id @default(autoincrement())
  userId    BigInt 
  skill     String
  createdAt DateTime @default(now())

  @@index([userId])   
}

model SeenJob {
  id        Int      @id @default(autoincrement())
  userId    BigInt
  jobUrl    String
  seen      Boolean  @default(true)
  createdAt DateTime @default(now())

  @@index([userId])          
  @@unique([userId, jobUrl])
}
